class Solution:
    def equalSumSpan(self, a1, a2):
        n = len(a1)
        prefix_map = {}
        curr_sum = 0
        max_len = 0

        for i in range(n):
            curr_sum += a1[i] - a2[i]

            
            if curr_sum == 0:
                max_len = i + 1

         
            if curr_sum in prefix_map:
                max_len = max(max_len, i - prefix_map[curr_sum])
            else:
             
                prefix_map[curr_sum] = i

        return max_len
