class Solution:
    def findClosestPair(arr1, arr2, x):
        n = len(arr1)
        m = len(arr2)

        i = 0
        j = m - 1

        diff = float('inf')
        res = [0, 0]

        while i < n and j >= 0:
            s = arr1[i] + arr2[j]

            if abs(s - x) < diff:
                diff = abs(s - x)
                res = [arr1[i], arr2[j]]

            if s > x:
                j -= 1
            else:
                i += 1

        return res
